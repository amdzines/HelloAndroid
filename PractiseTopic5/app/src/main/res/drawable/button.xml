<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3ECEAE" />
            <gradient android:angle="-45" android:startColor="#44D7B6" android:endColor="#40D6B4"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
            <stroke android:width="1dip" android:color="#3ECEAE" />
            <solid android:color="#44D7B6"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="4dip" />
            <stroke android:width="1dip" android:color="#3ECEAE" />
            <gradient android:angle="-45" android:startColor="#40D6B4" android:endColor="#44D7B6" />
        </shape>
    </item>
</selector>